---
import type { Lang } from '../../i18n/translations';
import type { Project } from '../../data/projects';

interface Props {
  project: Project;
  lang: Lang;
  t: Record<string, string>;
}

const { project, lang, t } = Astro.props;
const isComingSoon = project.status === "coming-soon";
const href = lang === "en" ? `/${project.slug}/` : `/${lang}/${project.slug}/`;
---

<a
  href={href}
  class:list={[
    "glow-card group relative flex h-full flex-col rounded-2xl border p-5 transition-colors",
    isComingSoon
      ? "border-border/50 bg-surface/50 opacity-70"
      : "border-border bg-surface hover:border-border-hover",
  ]}
>
  {isComingSoon && (
    <span class="absolute top-3 right-3 rounded-full bg-surface-hover px-2.5 py-0.5 text-[11px] font-medium text-text-tertiary">
      {t["oss.card.comingSoon"]}
    </span>
  )}

  <h3 class="text-base font-semibold group-hover:text-accent transition-colors">{project.name}</h3>
  <p class="mt-1.5 text-sm text-text-secondary leading-relaxed line-clamp-2">{project.tagline[lang]}</p>

  {project.features[lang] && project.features[lang].length > 0 && !isComingSoon && (
    <div class="mt-3 flex flex-wrap gap-1.5">
      {project.features[lang].slice(0, 3).map((f) => (
        <span class="rounded-md bg-bg px-2 py-0.5 text-[11px] text-text-tertiary border border-border/50">{f}</span>
      ))}
    </div>
  )}

  <!-- Spacer pushes bottom content down -->
  <div class="flex-1"></div>

  {!isComingSoon && project.installCommand && (
    <div class="pt-4">
      <div class="rounded-lg bg-bg border border-border/50 px-3 py-2 font-mono text-xs text-text-secondary">
        <span class="text-text-tertiary">$</span> {project.installCommand}
      </div>
    </div>
  )}

  {!isComingSoon && !project.installCommand && project.github && (
    <div class="pt-4 flex items-center gap-1.5 text-xs text-text-tertiary">
      <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
      </svg>
      {project.github}
    </div>
  )}
</a>
