---
import type { translations } from '../../i18n/translations';

interface Props {
  t: typeof translations.en;
}

const { t } = Astro.props;
---

<section class="reveal px-4 py-24 sm:px-6 sm:py-32 lg:px-8">
  <div class="mx-auto max-w-3xl">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold tracking-[-0.02em] sm:text-4xl">{t["deepagents.architecture.title"]}</h2>
      <p class="mt-4 text-lg text-text-secondary">{t["deepagents.architecture.subtitle"]}</p>
    </div>

    <div class="space-y-3">
      <!-- Layer 1: Your Application -->
      <div class="rounded-xl border border-border bg-surface p-4 text-center">
        <span class="text-sm font-semibold text-text">Your Application</span>
      </div>

      <!-- Arrow -->
      <div class="flex justify-center">
        <svg class="w-5 h-5 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
        </svg>
      </div>

      <!-- Layer 2: DeepAgent Orchestrator -->
      <div class="rounded-xl border border-accent/40 bg-surface p-5">
        <div class="text-center mb-4">
          <span class="text-sm font-semibold text-accent">DeepAgent Orchestrator</span>
        </div>
        <div class="grid grid-cols-1 gap-3 sm:grid-cols-3">
          <div class="rounded-lg border border-border bg-bg p-3 text-center">
            <span class="text-xs font-medium text-text-secondary">Planning<br/>Engine</span>
          </div>
          <div class="rounded-lg border border-border bg-bg p-3 text-center">
            <span class="text-xs font-medium text-text-secondary">Memory<br/>Manager</span>
          </div>
          <div class="rounded-lg border border-border bg-bg p-3 text-center">
            <span class="text-xs font-medium text-text-secondary">Context<br/>Compactor</span>
          </div>
        </div>
      </div>

      <!-- Arrow -->
      <div class="flex justify-center">
        <svg class="w-5 h-5 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
        </svg>
      </div>

      <!-- Layer 3: Middleware Stack -->
      <div class="rounded-xl border border-border bg-surface p-4">
        <div class="text-center mb-3">
          <span class="text-sm font-semibold text-text">Middleware Stack</span>
        </div>
        <div class="flex flex-wrap justify-center gap-2">
          {["Guardrails", "Cost Tracking", "Logging", "Permissions"].map((m) => (
            <span class="rounded-full border border-border bg-bg px-3 py-1 text-xs text-text-secondary">{m}</span>
          ))}
        </div>
      </div>

      <!-- Arrow -->
      <div class="flex justify-center">
        <svg class="w-5 h-5 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
        </svg>
      </div>

      <!-- Layer 4: Tool Registry -->
      <div class="rounded-xl border border-border bg-surface p-4">
        <div class="text-center mb-3">
          <span class="text-sm font-semibold text-text">Tool Registry</span>
        </div>
        <div class="flex flex-wrap justify-center gap-2">
          {["Filesystem", "Shell", "Web Search", "Sub-agents", "Custom"].map((tool) => (
            <span class="rounded-full border border-border bg-bg px-3 py-1 text-xs font-mono text-text-secondary">{tool}</span>
          ))}
        </div>
      </div>

      <!-- Arrow -->
      <div class="flex justify-center">
        <svg class="w-5 h-5 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
        </svg>
      </div>

      <!-- Layer 5: LLM Provider -->
      <div class="rounded-xl border border-border bg-surface p-4 text-center">
        <span class="text-sm font-semibold text-text">LLM Provider</span>
        <div class="mt-2 flex justify-center gap-4">
          {["Claude", "OpenAI", "Gemini"].map((p) => (
            <span class="text-xs text-text-tertiary">{p}</span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
