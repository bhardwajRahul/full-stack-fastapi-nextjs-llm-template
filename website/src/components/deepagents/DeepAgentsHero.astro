---
import type { translations } from '../../i18n/translations';

interface Props {
  t: typeof translations.en;
}

const { t } = Astro.props;

const terminalLines = [
  { prefix: "$", text: "pip install pydantic-deep", color: "text-text" },
  { prefix: "$", text: "python agent.py", color: "text-text" },
  { prefix: "▸", text: t["deepagents.hero.terminal.planning"], color: "text-text", prefixColor: "text-accent" },
  { prefix: "▸", text: t["deepagents.hero.terminal.reading"], color: "text-text-secondary", prefixColor: "text-accent" },
  { prefix: "▸", text: t["deepagents.hero.terminal.editing"], color: "text-text-secondary", prefixColor: "text-accent" },
  { prefix: "▸", text: t["deepagents.hero.terminal.delegating"], color: "text-text-secondary", prefixColor: "text-accent" },
  { prefix: "✓", text: t["deepagents.hero.terminal.complete"], color: "text-text", prefixColor: "text-green-400" },
];
---

<section class="relative overflow-hidden px-4 pt-24 pb-20 sm:px-6 sm:pt-32 sm:pb-24 lg:px-8 lg:pt-40 lg:pb-32">
  <!-- Subtle gradient glow -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div class="absolute top-[-30%] left-1/2 h-[800px] w-[800px] -translate-x-1/2 rounded-full bg-accent/[0.07] blur-[150px]"></div>
    <div class="absolute top-[-20%] left-[40%] h-[600px] w-[600px] -translate-x-1/2 rounded-full bg-violet-500/[0.04] blur-[130px]"></div>
  </div>

  <div class="relative mx-auto max-w-4xl text-center">
    <!-- Badge -->
    <div class="mb-8 inline-flex items-center rounded-full border border-border px-4 py-1.5 text-sm text-text-secondary">
      <span class="mr-2 inline-block h-1.5 w-1.5 rounded-full bg-accent"></span>
      {t["deepagents.hero.badge"]}
    </div>

    <!-- Headline -->
    <h1 class="text-4xl font-bold tracking-[-0.02em] sm:text-5xl lg:text-6xl">
      {t["deepagents.hero.title.line1"]}{" "}
      <span class="bg-gradient-to-r from-accent to-violet-500 bg-clip-text text-transparent">{t["deepagents.hero.title.highlight"]}</span>
      <br />
      {t["deepagents.hero.title.line2"]}
    </h1>

    <!-- Description -->
    <p class="mx-auto mt-6 max-w-2xl text-lg leading-relaxed text-text-secondary">
      {t["deepagents.hero.description"]}
    </p>

    <!-- CTA Buttons -->
    <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
      <a
        href="https://github.com/vstorm-co/pydantic-deepagents#quickstart"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center rounded-full bg-accent px-8 py-3 text-base font-semibold text-white transition-colors hover:bg-accent-hover"
      >
        {t["deepagents.hero.cta.getStarted"]}
        <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a
        href="https://github.com/vstorm-co/pydantic-deepagents"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-full border border-border px-8 py-3 text-base font-semibold text-text transition-colors hover:border-border-hover hover:bg-surface"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        {t["deepagents.hero.cta.github"]}
      </a>
    </div>

    <!-- Terminal Preview -->
    <div class="mx-auto mt-16 max-w-xl overflow-hidden rounded-2xl border border-border bg-surface shadow-2xl shadow-black/20">
      <div class="flex items-center gap-2 border-b border-border px-4 py-3">
        <span class="h-2.5 w-2.5 rounded-full bg-red-500/60"></span>
        <span class="h-2.5 w-2.5 rounded-full bg-yellow-500/60"></span>
        <span class="h-2.5 w-2.5 rounded-full bg-green-500/60"></span>
        <span class="ml-2 text-xs text-text-tertiary">{t["ui.terminal"]}</span>
      </div>
      <div id="da-terminal" class="px-5 py-5 text-left font-mono text-sm leading-loose min-h-[240px]">
        {/* Lines rendered by JS typing animation */}
      </div>
    </div>
  </div>
</section>

<script is:inline define:vars={{ terminalLines }}>
  (function() {
    var container = document.getElementById('da-terminal');
    if (!container) return;

    var charDelay = 28;
    var lineDelay = 400;
    var lines = terminalLines;
    var lineIndex = 0;

    function typeLine() {
      if (lineIndex >= lines.length) return;

      var line = lines[lineIndex];
      var p = document.createElement('p');
      var prefixSpan = document.createElement('span');
      prefixSpan.className = line.prefixColor || 'text-text-tertiary';
      prefixSpan.textContent = line.prefix;
      p.appendChild(prefixSpan);
      p.appendChild(document.createTextNode(' '));

      var textSpan = document.createElement('span');
      textSpan.className = line.color;
      p.appendChild(textSpan);

      var cursor = document.createElement('span');
      cursor.className = 'typing-cursor';
      p.appendChild(cursor);

      container.appendChild(p);

      var fullHtml = line.text;
      var tmp = document.createElement('div');
      tmp.innerHTML = fullHtml;
      var plainText = tmp.textContent || '';

      var charIndex = 0;
      function typeChar() {
        if (charIndex < plainText.length) {
          textSpan.textContent += plainText[charIndex];
          charIndex++;
          setTimeout(typeChar, charDelay);
        } else {
          textSpan.innerHTML = fullHtml;
          cursor.remove();
          lineIndex++;
          setTimeout(typeLine, lineDelay);
        }
      }
      typeChar();
    }

    setTimeout(typeLine, 600);
  })();
</script>
