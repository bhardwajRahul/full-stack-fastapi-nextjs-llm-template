---
import type { translations } from '../../i18n/translations';

interface Props {
  t: typeof translations.en;
}

const { t } = Astro.props;
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith("/") ? rawBase : rawBase + "/";
---

<section class="relative overflow-hidden px-4 pt-24 pb-20 sm:px-6 sm:pt-32 sm:pb-24 lg:px-8 lg:pt-40 lg:pb-32">
  <!-- Gradient glow (pink/magenta — Logfire brand) -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div class="absolute top-[-30%] left-1/2 h-[800px] w-[800px] -translate-x-1/2 rounded-full bg-pink-500/[0.07] blur-[150px]"></div>
    <div class="absolute top-[-20%] left-[40%] h-[600px] w-[600px] -translate-x-1/2 rounded-full bg-fuchsia-500/[0.05] blur-[130px]"></div>
  </div>

  <div class="relative mx-auto max-w-5xl text-center">
    <!-- Badge -->
    <div class="mb-8 inline-flex items-center rounded-full border border-border px-4 py-1.5 text-sm text-text-secondary">
      <span class="mr-2 inline-block h-1.5 w-1.5 rounded-full bg-pink-500"></span>
      {t["logfire.hero.badge"]}
    </div>

    <!-- Headline -->
    <h1 class="text-4xl font-bold tracking-[-0.02em] sm:text-5xl lg:text-6xl">
      {t["logfire.hero.title.line1"]}{" "}
      <span class="bg-gradient-to-r from-pink-500 to-fuchsia-500 bg-clip-text text-transparent">{t["logfire.hero.title.highlight"]}</span>
    </h1>

    <!-- Description -->
    <p class="mx-auto mt-6 max-w-2xl text-lg leading-relaxed text-text-secondary">
      {t["logfire.hero.description"]}
    </p>

    <!-- CTA Buttons -->
    <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
      <a
        href="https://github.com/vstorm-co/logfire-assistant"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center rounded-full bg-pink-500 px-8 py-3 text-base font-semibold text-white transition-colors hover:bg-pink-600"
      >
        {t["logfire.hero.cta.getStarted"]}
        <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a
        href="https://vstorm-co.github.io/logfire-assistant/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-full border border-border px-8 py-3 text-base font-semibold text-text transition-colors hover:border-border-hover hover:bg-surface"
      >
        {t["logfire.hero.cta.docs"]}
      </a>
    </div>

    <!-- Hero Product Screenshot -->
    <div class="mx-auto mt-16 overflow-hidden rounded-2xl border border-border shadow-2xl shadow-black/20">
      <img
        src={`${base}logfire/home-page.png`}
        alt="Logfire Assistant — Chrome extension sidebar next to Logfire dashboard"
        class="w-full h-auto"
        loading="eager"
      />
    </div>
  </div>
</section>
