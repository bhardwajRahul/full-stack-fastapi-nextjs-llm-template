---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/landing/Hero.astro';
import FrameworkLogos from '../components/landing/FrameworkLogos.astro';
import Features from '../components/landing/Features.astro';
import Presets from '../components/landing/Presets.astro';
import QuickStart from '../components/landing/QuickStart.astro';
import FaqPreview from '../components/landing/FaqPreview.astro';
import Footer from '../components/landing/Footer.astro';
import { translations, languages, defaultLang } from '../i18n/translations';

const lang = defaultLang;
const t = translations[lang];

const alternates = [
  { lang: "en", href: "/" },
  ...Object.keys(languages)
    .filter((l) => l !== defaultLang)
    .map((l) => ({ lang: l, href: `/${l}/` })),
];
---

<Layout
  title="Fullstack AI Agent Template â€” Ship Production AI Apps In Minutes"
  description={t["meta.description"]}
  lang={lang}
  alternates={alternates}
>
  <Navbar currentLang={lang} />
  <Hero t={t} />
  <FrameworkLogos t={t} />
  <Features t={t} />
  <Presets t={t} />
  <QuickStart t={t} />
  <FaqPreview t={t} lang={lang} />
  <Footer t={t} />
</Layout>
