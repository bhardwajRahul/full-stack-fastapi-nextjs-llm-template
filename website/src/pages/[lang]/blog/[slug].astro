---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';
import { languages, defaultLang, type Lang } from '../../../i18n/translations';

export async function getStaticPaths() {
  const nonDefaultLocales = Object.keys(languages).filter((l) => l !== defaultLang);

  const posts = await getCollection('blog', ({ data }) =>
    nonDefaultLocales.includes(data.lang) && !data.draft
  );

  return posts.map((post) => {
    const slug = post.id.split('/').slice(1).join('/');
    return {
      params: { lang: post.data.lang, slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const lang = post.data.lang as Lang;
const { Content, headings } = await render(post);

const allPosts = await getCollection('blog', ({ data }) =>
  data.translationKey === post.data.translationKey && !data.draft
);
const allTranslations = allPosts.map((p) => ({
  lang: p.data.lang as Lang,
  slug: p.id.split('/').slice(1).join('/'),
}));
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  updatedDate={post.data.updatedDate}
  author={post.data.author}
  tags={post.data.tags}
  lang={lang}
  translationKey={post.data.translationKey}
  headings={headings}
  allTranslations={allTranslations}
>
  <Content />
</BlogLayout>
